<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gmail.moreau1006.mikael.attendancemanager">

    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/soccer_ball"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activity.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activity.ListPlayersActivity" />
        <activity android:name=".Activity.ListTeamsActivity" />
        <activity android:name=".Activity.ListMatchsActivity" />
        <activity android:name=".Activity.SelectTeamActivity" />
        <activity android:name=".Activity.SelectInvitedPlayersActivity" />
        <activity android:name=".Activity.SelectDateMatchActivity" />
        <activity android:name=".Activity.SelectOpponentActivity" />
        <activity android:name=".Activity.WriteSmsActivity" />
        <activity android:name=".Activity.MatchActivity" />
        <activity android:name=".Activity.AddInvitedPlayerActivity" />
        <activity android:name=".Activity.WriteSmsForNewInvitedPlayersActivity" />
        <activity android:name=".Activity.MessageActivity"></activity>
    </application>

</manifest>