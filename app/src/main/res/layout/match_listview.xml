<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">



    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="left">

        <TextView
            android:id="@+id/match_textview_opponent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="opponent"/>

        <TextView
            android:id="@+id/match_textview_team"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textSize="18sp"
            android:text="team name"
            />

        <TextView
            android:id="@+id/match_textview_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textSize="16sp"
            android:text="dateMatch"/>

        <TextView
            android:id="@+id/match_textview_dateRdv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textSize="14sp"
            android:text="dateRdv"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/match_textview_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textSize="14sp"
            android:text="home"
            android:visibility="gone"
            />

    </LinearLayout>

    <ImageButton
        android:id="@+id/match_button_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:src="@android:drawable/ic_menu_view"
        android:onClick="showMatch"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/match_button_delete" />

    <ImageButton
        android:id="@+id/match_button_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:src="@android:drawable/ic_menu_delete"
        android:tint="@color/bpRed"
        android:onClick="deleteMatch"
        android:layout_centerVertical="true"
        android:layout_alignBaseline="@+id/match_button_show"
        android:layout_alignBottom="@+id/match_button_show"
        android:layout_alignParentEnd="true" />

</RelativeLayout>