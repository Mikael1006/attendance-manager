<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/team_textview_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:paddingLeft="8dp"
        android:textSize="22sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/team_button_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:text="Editer"
        android:onClick="editTeam"
        android:layout_alignBaseline="@+id/team_button_delete"
        android:layout_alignBottom="@+id/team_button_delete"
        android:layout_toStartOf="@+id/team_button_delete" />

    <Button
        android:id="@+id/team_button_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:text="Supprimer"
        android:onClick="deleteTeam"/>

</RelativeLayout>