<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/invited_player_linearlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="horizontal"
        android:onClick="editAttendance">

        <View
            android:id="@+id/invited_player_square"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:background="@drawable/square" />

        <TextView
            android:id="@+id/invited_player_textview_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:textSize="22sp"
            android:textStyle="bold"
            android:text="name"/>

    </LinearLayout>

    <TextView
        android:id="@+id/invited_player_textview_numberphone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/invited_player_linearlayout"
        android:textSize="14sp"
        android:paddingLeft="30dp"
        android:layout_marginTop="5dp"
        android:text="numero"/>


</RelativeLayout>