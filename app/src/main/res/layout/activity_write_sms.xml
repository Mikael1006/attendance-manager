<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gmail.moreau1006.mikael.attendancemanager.Activity.WriteSmsActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/sms_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Redigez le sms"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/sms_editText"
            android:layout_width="360dp"
            android:layout_height="233dp"
            android:ems="10"
            android:inputType="textMultiLine"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="16dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <ProgressBar
            android:id="@+id/write_sms_progressbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:visibility="gone"/>

        <Button
            android:id="@+id/validate_sms_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="validateSms"
            android:text="Envoyer sms" />

    </LinearLayout>


</android.support.constraint.ConstraintLayout>
